<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>دەلاکەکان</title>
    <!-- custom css link -->
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/users.css">
    <!-- font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>

<body>
    <%- include("./include/header.ejs") %>
        <div class="container">
            <h1>دەلاکەکان</h1>
            <div class="controls">
                <input type="text" id="searchInput" placeholder="فلتەرکردن">
                <button id="exportBtn">گواستنەوە بۆ فایلی ئێکسڵ</button>
                <button id="deleteSelectedBtn">سڕینەوە</button>
                <button id="addRowBtn">زیادکردن</button>
            </div>

            <table id="dataTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll"></th>
                        <th>ئایدی</th>
                        <th>ناوی یەکەم</th>
                        <th>ناوی دووەم</th>
                        <th>ژمارەی مۆبایل</th>
                        <th>ناونیشان</th>
                        <th>کردار</th>
                    </tr>
                </thead>

                <tbody>
                    <% data.forEach(row=> { %>
                        <tr>
                            <td><input type="checkbox" class="selectRow" data-id="<%= row.Id %>"></td>
                            <td>
                                <%= row.Id %>
                            </td>
                            <td>
                                <%= row.Firstname %>
                            </td>
                            <td>
                                <%= row.Lastname %>
                            </td>
                            <td>
                                <%= row.Phonenumber %>
                            </td>
                            <td>
                                <%= row.Address %>
                            </td>
                            <td>
                                <button class="editBtn" data-id="<%= row.Id %>"><i
                                        class="fa-solid fa-pen-to-square"></i></button>
                                <!-- <button class="viewBtn" data-id="<%= row.Id %>"><i class="fa-solid fa-eye"></i></button> -->
                                <!-- <button id="deleteBtn" data-id="<%= row.Id %>"><i class="fa-solid fa-trash"></i></button> -->
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

            <div class="pagination">
                <button id="prevPage">پێشتر</button>
                <span id="pageInfo"></span>
                <button id="nextPage">دواتر</button>
            </div>

        </div>


        <!-- Modal for Add/Edit Row -->
        <div id="rowFormModal" class="modal" style="display: none;">
            <div class="modal-content">
                <span class="close-btn">&times;</span>
                <h2 id="modalTitle">Add Row</h2>
                <form id="rowForm">
                    <input type="hidden" id="rowId" name="rowId" />
                    <div>
                        <label for="firstname">ناوی یەکەم</label>
                        <input type="text" id="firstname" name="firstname" />
                    </div>
                    <div>
                        <label for="lastname">ناوی دووەم</label>
                        <input type="text" id="lastname" name="lastname" />
                    </div>
                    <div>
                        <label for="phonenumber">ژمارەی مۆبایل</label>
                        <input type="text" id="phonenumber" name="phonenumber" />
                    </div>
                    <div>
                        <label for="address">نانیشان</label>
                        <input type="text" id="address" name="address" />
                    </div>
                    <button type="submit" id="saveBtn">پاراستن</button>
                </form>
            </div>
        </div>
        <!-- custom js link -->
        <script src="/js/time.js"></script>
        <script src="/js/barbers.js"></script>
</body>

</html>